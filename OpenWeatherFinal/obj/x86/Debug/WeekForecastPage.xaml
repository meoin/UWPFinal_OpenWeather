<Page x:ConnectionId='1'
    x:Class="OpenWeatherFinal.WeekForecastPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenWeatherFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:models="using:OpenWeatherFinal.Models"
    xmlns:viewmodels="using:OpenWeatherFinal.ViewModels"
    RequestedTheme="Light">

    <Page.Resources>
        <CollectionViewSource x:ConnectionId='2' 
            x:Name="ForecastCollection"                                >
        </CollectionViewSource>

        <DataTemplate x:ConnectionId='3' x:Name="ForecastTemplate"                                      >
            <StackPanel x:ConnectionId='4' Orientation="Vertical">
                <Canvas Width="400">
                    <Line
                         X1="0" Y1="5"
                         X2="500" Y2="5"
                         Stroke="LightBlue"
                         StrokeThickness="1"/>
                </Canvas>
                <StackPanel Orientation="Horizontal" Margin="0, 12, 0, 0" >
                    <TextBlock x:ConnectionId='12'                      Margin="0, 0, 50, 0" FontSize="16"></TextBlock>
                    <TextBlock Text="Sunrise: " Margin="0, 0, 5, 0"></TextBlock>
                    <TextBlock x:ConnectionId='13'                         Margin="0, 0, 20, 0"></TextBlock>
                    <TextBlock Text="Sunset: " Margin="0, 0, 5, 0"></TextBlock>
                    <TextBlock x:ConnectionId='14'                        Margin="0, 0, 20, 0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 12, 0, 0">
                    <TextBlock Text="High: " Margin="0, 0, 5, 0" FontSize="16"></TextBlock>
                    <TextBlock x:ConnectionId='9'                         Margin="0, 0, 15, 0" FontSize="16"></TextBlock>
                    <TextBlock Text="Low:" Margin="0, 0, 5, 0" FontSize="16"></TextBlock>
                    <TextBlock x:ConnectionId='10'                         Margin="0, 0, 50, 0" FontSize="16"></TextBlock>
                    <TextBlock x:ConnectionId='11'                                    Margin="0, 0, 5, 0" FontSize="18"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0, 12, 0, 4">
                    <TextBlock Text="Pressure: " Margin="0, 0, 5, 0"></TextBlock>
                    <TextBlock x:ConnectionId='5'                          Margin="0, 0, 15, 0"></TextBlock>
                    <TextBlock Text="Humidity:" Margin="0, 0, 5, 0"></TextBlock>
                    <TextBlock x:ConnectionId='6'                          Margin="0, 0, 15, 0"></TextBlock>
                    <TextBlock Text="Clouds: " Margin="0, 0, 5, 0"></TextBlock>
                    <TextBlock x:ConnectionId='7'                        Margin="0, 0, 15, 0"></TextBlock>
                    <TextBlock Text="Precipitation: " Margin="0, 0, 5, 0"></TextBlock>
                    <TextBlock x:ConnectionId='8'                               Margin="0, 0, 5, 0"></TextBlock>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        
        <TextBlock x:ConnectionId='15' x:Name="CityName" FontSize="38" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>

        <Button x:ConnectionId='16' VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                     >
            <SymbolIcon Symbol="Back"/>
        </Button>

        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <ListView x:ConnectionId='17' x:Name="DayListView" VerticalAlignment="Top"
                ItemsSource="{Binding Source={StaticResource ForecastCollection}}"
                ItemTemplate="{Binding Source={StaticResource ForecastTemplate}}"
                ></ListView>
        </ScrollViewer>
    </Grid>
</Page>

